{
    "name": "dirtree",
    "displayName": "Dir Tree MD",
    "description": "Updates TREE.md with the directory structure on file/directory creation.",
    "version": "0.0.2",
    "publisher": "DevShedLabs",
    "license": "MIT",
    "repository": {
        "type": "git",
        "url": "https:github.com/topdown/tree"
    },
    "engines": {
        "vscode": "^1.101.0"
    },
    "categories": [
        "Other"
    ],
    "activationEvents": [
        "workspaceContains:**",
        "onStartupFinished"
    ],
    "main": "./dist/extension.js",
    "contributes": {
        "commands": [
            {
                "command": "tree.helloWorld",
                "title": "Hello World"
            }
        ],
        "configuration": {
            "type": "object",
            "title": "Tree Extension Configuration",
            "properties": {
                "tree.enabled": {
                    "type": "boolean",
                    "default": true,
                    "description": "Enable or disable TREE.md updates."
                },
                "tree.maxDepth": {
                    "type": "number",
                    "default": 3,
                    "description": "Maximum depth to display in TREE.md."
                },
                "tree.exclude": {
                    "type": "array",
                    "items": {
                        "type": "string"
                    },
                    "default": [
                        "node_modules",
                        ".git",
                        "dist",
                        "out",
                        ".vscode",
                        ".github",
                        ".vscode-test",
                        ".vscode-test-electron",
                        ".idea",
                        ".DS_Store",
                        "TREE.md",
                        "logs",
                        "build",
                        "temp",
                        ".cache"
                    ],
                    "description": "Glob patterns to exclude from TREE.md."
                }
            }
        }
    },
    "scripts": {
        "vscode:prepublish": "npm run package",
        "compile": "webpack",
        "watch": "webpack --watch",
        "package": "webpack --mode production --devtool hidden-source-map",
        "compile-tests": "tsc -p . --outDir out",
        "watch-tests": "tsc -p . -w --outDir out",
        "pretest": "npm run compile-tests && npm run compile && npm run lint",
        "lint": "eslint src",
        "test": "vscode-test",
        "vsix": "vsce package"
    },
    "devDependencies": {
        "vsce": "latest",
        "@types/vscode": "^1.101.0",
        "@types/mocha": "^10.0.10",
        "@types/node": "20.x",
        "@typescript-eslint/eslint-plugin": "^8.31.1",
        "@typescript-eslint/parser": "^8.31.1",
        "eslint": "^9.25.1",
        "typescript": "^5.8.3",
        "ts-loader": "^9.5.2",
        "webpack": "^5.99.7",
        "webpack-cli": "^6.0.1",
        "@vscode/test-cli": "^0.0.11",
        "@vscode/test-electron": "^2.5.2"
    }
}